{
  "name": "@ov2/lightrail",
  "version": "1.2.2",
  "description": "Node.js CLI tool for launching and managing ARK game servers with restart scheduling.",
  "main": "src/core/cli.js",
  "type": "module",
  "bin": {
    "lightrail": "src/core/cli.js"
  },
  "scripts": {
    "start": "node src/core/cli.js",
    "package": "npx pkg . --targets node18-win-x64 --output build/Lightrail.exe"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ark",
    "server",
    "cli",
    "game",
    "restart",
    "scheduler"
  ],
  "author": "Dev OV2",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "inquirer": "^8.2.4",
    "is-admin": "^4.0.0",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
