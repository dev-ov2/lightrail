{
  "name": "@ov2/lightrail",
  "version": "1.2.2",
  "description": "Node.js CLI tool for launching and managing ARK game servers with restart scheduling.",
  "main": "cli.js",
  "type": "commonjs",
  "bin": {
    "lightrail": "cli.js"
  },
  "scripts": {
    "start": "node src/core/cli.js",
    "sea:prepare": "node sea-prep.cjs",
    "sea:blob": "node --experimental-sea-config sea-config.json",
    "sea:build:win": "node -e \"require('fs').cpSync(process.execPath,'build/Lightrail.exe');\" && postject build/Lightrail.exe NODE_SEA_BLOB sea-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2",
    "sea:build:linux": "node -e \"require('fs').cpSync(process.execPath,'build/Lightrail-linux');\" && postject build/Lightrail-linux NODE_SEA_BLOB sea-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2",
    "build:linux": "pnpm run sea:prepare && pnpm run sea:blob && pnpm run sea:build:linux",
    "build:win": "pnpm run sea:prepare && pnpm run sea:blob && pnpm run sea:build:win"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ark",
    "server",
    "cli",
    "game",
    "restart",
    "scheduler"
  ],
  "author": "Dev OV2",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.0",
    "inquirer": "^8.2.4",
    "is-admin": "^4.0.0",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "postject": "1.0.0-alpha.6"
  }
}
